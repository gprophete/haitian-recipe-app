<h1>{{oneRecipe.name}}</h1>

<a href="/recipe/{{oneRecipe._id}}/edit">
    <button>Edit</button>
</a>


<h4>{{oneRecipe.name}}</h4>

<h4>{{oneRecipe.time}}</h4>

<h4>{{oneRecipe.ingredients}}</h4>

<h4>{{oneRecipe.prep}}</h4>

<h4>{{oneRecipe.servings}}</h4>

<hr>

<form action="/recipe/{{oneRecipe._id}}?_method=DELETE" method="POST">
    <input type="submit" value="Delete recipe" />
</form>
<hr>

<form action="/list" method="POST">
    <input type="hidden" value="{{oneRecipe._id}}" name="parentId" />

    <label>Produce</label>
    <textarea type= "text" name= "produce"></textarea>

    <label>Protein</label>
    <textarea type= "text" name= "animalProtein"></textarea>

    <label>Dairy</label>
    <textarea type= "text" name= "dairy"></textarea>

    <label>Misc</label>
    <textarea type= "text" name= "misc"></textarea>

    <input type="submit" value="Create" />


</form>


{{#each list}}
<a href="/list/{{_id}}">

    <h4>{{produce}}</h4>

    <h4>{{animalProtein}}</h4>

    <h4>{{dairy}}</h4>

    <h4>{{misc}}</h4>

</a>
{{/each}}
<hr>
<form action="/type" method="POST">

    <input type="hidden" value="{{oneRecipe._id}}" name="recipeId" />

    <label>Meal Type</label>
    <input type="text" name="mealType" />

    <label>Cooking Type</label>
    <input type="text" name="cookingType" />

    <label>Diet Type</label>
    <input type="text" name="dietType" />

    <input type="submit" value="Create" />


</form>

{{#each category}}

<a class="type-item" href="/type/{{_id}}">


    <h3 class="category">Meal Type</h3>
    <h4>{{mealType}}</h4>

    <h3>Cooking Type</h3>
    <h4>{{cookingType}}</h4>

    <h3>Diet Type</h3>
    <h4>{{dietType}}</h4>

</a>
{{/each}}