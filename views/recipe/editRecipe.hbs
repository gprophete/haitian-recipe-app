<h1>Edit Recipe</h1>

<form action="/recipe/{{oneRecipe._id}}?_method=PUT" method="POST">
    <label>Name</label>
    <input type='text' name="name" value="{{oneRecipe.name}}" />

    <label>Time</label>
    <input type='text' name="time" value="{{oneRecipe.time}}" />

    <label>Ingredients</label>
    <textarea type='text' name="ingredients">{{oneRecipe.ingredients}}</textarea>


    <label for= "prep">Prep</label>
    <textarea type="text" name= "prep"> 
        {{oneRecipe.prep}}
    </textarea>

    <label>Sevings</label>
    <input type='Number' name="servings" value="{{oneRecipe.servings}}" />

    <input type="submit" value="Save" />

</form>